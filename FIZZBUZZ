// not original honestly, found online and edited slightly

int c = 1;

void setup() {
  size(500, 480);
  frameRate(10);
}

void draw () {
  if (c <= 100); {
    fizzbuzz();
    c +=1;
  }
  if (c == 100) {
    fizzbuzz();
    noLoop();
  }
}

void fizzbuzz() {
  if (c % 3 == 0 && c % 5 == 0) {
    println("fizzbuzz");
  }
  else if (c % 3 == 0) {
    println("fizz");
  }
   else if (c % 5 == 0) {
    println("buzz");
   }
   else {
     println(c);
   }
}
